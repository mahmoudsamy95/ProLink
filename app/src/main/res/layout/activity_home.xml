<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ea.prolink.HomeActivity"
    android:orientation="vertical">
    
    
    <android.support.design.widget.TabLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        app:tabMode="fixed"
        app:tabGravity="fill"
        app:tabTextColor="@android:color/white"
        app:tabIndicatorColor="@color/whiteBg"
        app:tabSelectedTextColor="@color/colorPrimaryDark"
        android:id="@+id/homeTabs"></android.support.design.widget.TabLayout>
        
        
    <android.support.v4.view.ViewPager
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/homeViewPager"
        android:background="@color/whiteBg"></android.support.v4.view.ViewPager>




</LinearLayout>
